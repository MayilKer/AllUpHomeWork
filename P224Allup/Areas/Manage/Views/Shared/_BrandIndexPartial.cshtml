@model IEnumerable<Brand>
@{
    int count = 0;
}
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Status</th>
            <th scope="col">Setting</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Brand brand in Model)
        {
            count++;
            <tr>
                <th scope="row">@count</th>
                <td>@brand.Name</td>
                <td style="color:@(brand.IsDeleted ? "red":"green")">@(brand.IsDeleted ? "DeActive":"Active")</td>
                <td>
                    <a class="btn btn-primary" asp-action="Detail" asp-route-id="@brand.Id">Detail</a>
                    <a class="btn btn-warning" asp-action="Update" asp-route-id="@brand.Id">Update</a>
                    <a id="@(brand.IsDeleted ? "restoreTag":"deleteTag")" class="btn @(brand.IsDeleted ? "btn-success":"btn-danger")" asp-action="@(brand.IsDeleted ? "Restore":"Delete")" asp-route-id="@brand.Id">@(brand.IsDeleted ? "Restore":"Delete")</a>
                </td>
            </tr>
        }
    </tbody>
</table>